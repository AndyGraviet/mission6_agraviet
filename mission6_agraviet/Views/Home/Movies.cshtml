@{
    ViewData["Title"] = "Movies";
}

@model mission6_agraviet.Models.MovieSubmission
<form method="post">
    <div class="text-center">
        <h1 class="display-4">Movies Page</h1>
    </div>

    <!--FORM STARTS HERE-->
    <!--NEED TO FIGURE OUT HOW SELECT INPUTS WORK IN ASP-->
    <div class="field">
        <div class="select">
            <label class="label" asp-for="category">Category</label>
            <select asp-for="category">
                <option value="Action">Action</option>
                <option value="Adventure">Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Horror/Suspense">Horror / Suspense</option>
                <option value="Miscellaneous">Miscellaneous</option>
                <option value="Television">Television</option>
                <option value="VHS">VHS</option>
            </select>
        </div>
    </div>
    <br />
    <br />


    <div class="field">
        <label class="label" asp-for="title">Movie Title</label>
        <div class="control">
            <input class="input" type="text" placeholder="The Three Amigos..." asp-for="title">
        </div>
    </div>

    <div class="field">
        <label class="label" asp-for="year">Year</label>
        <div class="control">
            <input class="input" type="number" placeholder="1990" asp-for="year">
        </div>
    </div>

    <div class="field">
        <label class="label" asp-for="director">Director</label>
        <div class="control">
            <input class="input" type="text" placeholder="Tim Burton" asp-for="director">
        </div>
    </div>

    <!--NEED TO FIGURE OUT HOW SELECT INPUTS WORK IN ASP-->
    <div class="field">
        <div class="select">
            <label class="label" asp-for="rating">Rating</label>
            <select asp-for="rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NC-17">NC-17</option>
            </select>
        </div>
    </div>
    <br />
    <br />

    <div>
        <input type="checkbox" asp-for="edited">
        <label class="checkbox" asp-for="edited">
            <strong>This film is edited </strong>(do not select if film is edited)
        </label>
    </div>

    <div class="field">
        <label class="label" asp-for="lentTo">Lent to:</label>
        <div class="control">
            <input class="input" type="text" placeholder="My wife's father in law..." asp-for="lentTo">
        </div>
    </div>

    <div>
        <label class="label" asp-for="notes">Notes:</label>
        <textarea class="textarea is-primary" placeholder="e.g. Hello world" maxlength="25" asp-for="notes"></textarea>
        <p class="is-size-7 has-text-grey-light">Notes input is limited to 25 characters</p>
    </div>
    <br />
    <button class="button is-primary">Submit</button>
</form>
<div asp-validation-summary="All">

</div>

